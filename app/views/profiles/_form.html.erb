    <div class="w-100">
      <%= form_with(model: @profile, local: true) do |f| %>
      <div class="row align-items-start py-3 border-bottom">
        <div class="col-12 col-lg-6 pl-sm-4 pl-2">
          <b>Profile Photo</b>
          <% if @profile.picture.attached? %>
            <%= image_tag @profile.picture, class: "rounded-circle d-block", width: "100px", height: "100px" %>
            <% else %>
              <img class="rounded-circle d-block" src="https://images.pexels.com/photos/1037995/pexels-photo-1037995.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" width="100px" height="100px" alt="" />
          <% end %>
          <p>Accepted file type .png. Less than 1MB</p>
            <%= f.file_field :picture, class: "btn" %>
        </div>
        <div class="col-12 col-lg-6 align-items-start pb-3">
          <%= f.label :personal_statement, class: "flabel" %>
          <%= f.text_area :personal_statement, rows: "5", class: "bg-light form-control" %>
        </div>
      </div>

      <div class="container">
        <div class="row py-2">
          <div class="col-12 col-lg-6">
            <%= f.label :first_name, class: "flabel" %>
            <%= f.text_field :first_name, class: "bg-light form-control", placeholder: "Steve" %>
          </div>
          <div class="col-12 col-lg-6 pt-md-0 pt-3">
            <%= f.label :last_name, class: "flabel" %>
            <%= f.text_field :last_name, class: "bg-light form-control", placeholder: "Smith" %>
          </div>
        </div>
        <div class="row py-2">
          <div class="col-12 col-lg-6">
            <%= f.label :email_address, class: "flabel" %>
            <%= f.email_field :email_address, class: "bg-light form-control", placeholder: "steve_@email.com" %>
          </div>
          <div class="col-12 col-lg-6 pt-md-0 pt-3">
            <%= f.label :phone_number, class: "flabel" %>
            <%= f.telephone_field :phone_number, class: "bg-light form-control", placeholder: "+971........." %>
          </div>
        </div>
        <div class="row py-2">
          <div class="col-12 col-lg-6">
            <%= f.label :nationality, class: "flabel" %>
            <%= f.text_field :nationality, class: "bg-light form-control", placeholder: "United Arab Emirates" %>
          </div>
          <div class="col-12 col-lg-6 pt-md-0 pt-3" id="lang">
            <%= f.label :gender, class: "flabel" %>
            <%= f.text_field :gender, class: "bg-light form-control", placeholder: "Gender" %>
          </div>
        </div>
        <div class="row py-2">
          <div class="col-12 col-lg-6">
            <%= f.label :date_of_birth, class: "flabel" %>
            <%= f.date_field :date_of_birth, class: "bg-light form-control", placeholder: "DD-MM-YYYY" %>
          </div>
          <div class="col-12 col-lg-6 pt-md-0 pt-3" id="lang">
            <%= f.label :designation, class: "flabel" %>
            <%= f.text_field :designation, class: "bg-light form-control", placeholder: "Designation" %>
          </div>
        </div>
        <div class="py-3 pb-4 border-bottom">
          <%= f.submit "Save", class: "btn w-25 btn-primary mr-3" %>
        </div>
      </div>
      <% end %>
    </div>

