<% @followed_and_user_posts.each do |post| %>
      <div class="box no-border">
      <article class="media">
          <div class="media-left">
              <figure class="image is-64x64">
              </figure>
          </div>

          <div class="media-content">
              <div class="content quote-org mb-0">
                  <div class="fullname">
                      <%= link_to post.user.fullname, user_path(post.user), class: 'fullname' %><br>
                      <small>@<%= link_to post.user.username, user_path(post.user), class: 'post-author' %></small><br />

                      <div class="is-flex is-justify-content-space-between like">
                          <p><%= post.postcontent %> </p>

                      </div>
                      <div class="likke mt-2 pt-1"><%= post.likes.count %>
                          <%= like_or_dislike_btn(post) %></div>

                  </div>
                  <div class="quote-icon is-flex">
                      <div class="mt-3">
                        <%= link_to edit_post_path(post), class: 'level-item edit' do %>
                          <span class="icon">
                              <i class="fa fa-pencil" aria-hidden="true"></i>
                          </span>
                        <% end %>
                        <%= delete_own_post(post) %>
                      </div>

                  </div>
              </div>
              <nav class="block">

                  <div class='post-comments-section'>
                      <div class="pl-2">
                          <%= render partial: 'replies/reply', collection: post.replies %>

                          <%= form_for(post.replies.new, url: post_replies_path(post)) do |form| %>
                          <div class="reply-input"><%= form.text_field :content, label: "Post about it", input_html: { class: "input"},
                                                  wrapper: false, label_html: {class: "label"}, placeholder: "Reply this post.",
                                                  autofocus: true %></div>
                          <%= form.button :submit, class: "button is-info mt-1" %>
                          <% end %>
                      </div>
                  </div>

              </nav>
          </div>

      </article>
        </div>
      <% end %> 