<%=  simple_form_for(@post) do |f| %>
<%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :postcontent, label: "Write a new thing today...", input_html: { class: "input"}, wrapper: false, 
      label_html: {class: "label"}, placeholder: "Write a Post...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info create-post" %>
<% end %>
